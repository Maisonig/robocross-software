    <link name='chassis'>
        <visual>
            <geometry>
                <box size="4.26 1.7 0.93" />
            </geometry>
            <material name="light_gray" />
        </visual>
    </link>

    <link name='front_left_wheel'>
        <visual>
            <geometry>
                <cylinder length="0.175" radius="0.285" />
