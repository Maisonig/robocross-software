            <material name="light_gray" />
        </visual>
    </link>

    <link name='rear_left_wheel'>
        <visual>
            <geometry>
                <cylinder length="0.175" radius="0.285" />
            </geometry>
            <material name="light_gray" />
        </visual>
    </link>

    <link name='front_right_wheel'>
        <visual>
            <geometry>
